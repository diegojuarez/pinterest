<div class="container">


<h1>Tu eres la vista de Pins</h1>
 <br>

<% @pins.each do |pin| %>
   <div class="row">
    
    <div class="col-md-3">
      <div class="thumbnail">
       
         <%= pin.name %>
            <%= image_tag(pin.photo, :class => 'img-responsive') %>
             <%= pin.descripcion %>
            <div class="buttons" style="margin-top: 10px; margin-bottom: 10px"></div>
          
               <%= link_to 'Show', pin, :class => 'btn'%>
               <%= link_to 'Edit', edit_pin_path(pin),:class => 'btn' %>
               <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' },
               :class => 'btn'%>
           </div>

       </div>
       <% end %>
    </div>
    </div>
    
  



<p>
<%= link_to 'New Pin', new_pin_path %>
</p>
</div>